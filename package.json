{
  "name": "apollo-blog-gateway",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.prod.ts",
    "start:dev": "webpack --config webpack.dev.ts --watch & nodemon build/bundle.js",
    "lint": "eslint \"src/**/*.ts\"",
    "debug": "nodemon --inspect build/bundle.js",
    "dev": "concurrently -k yarn:dev:*",
    "dev:accounts": "cd ../apollo-blog-accounts-service && yarn start:dev",
    "dev:gateway": "wait-on tcp:4001 && yarn start:dev"
  },
  "dependencies": {
    "@apollo/gateway": "^0.28.2",
    "apollo-server-express": "^2.24.0",
    "class-validator": "^0.13.1",
    "express": "^4.17.3",
    "express-jwt": "^6.0.0",
    "graphql": "^15.5.0",
    "jwks-rsa": "^2.0.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "wait-on": "^5.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/express-jwt": "^6.0.1",
    "@types/node": "^15.0.1",
    "@types/webpack-node-externals": "^2.5.1",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "concurrently": "^6.2.0",
    "dotenv": "^9.0.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "esm": "^3.2.25",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "request": "^2.88.2",
    "ts-loader": "^9.1.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.6.0",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^3.0.0"
  }
}
